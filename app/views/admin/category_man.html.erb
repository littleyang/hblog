<%= render :partial=>"header" %>
<div class="container">
  <div class="container-fluid">
    <div class="row-fluid post">
      <div class="span2">
        <%= render :partial => helper_check_permission(1) %>
      </div>
      <div class="span10">
        <div class="alert alert-info" style="height:18px"><p>当前时间:<%= Time.new().to_s(:long) %></p></div>
        <% if flash[:notice] %>
          <div class="alert alert-success"><%= flash[:notice] %></div>
        <% end %>
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>名称</th>
              <th>描述</th>
              <th>时间</th>
              <th>功能</th>
            </tr>
            <tbody>
              <% if @categories %>
                <% for category in @categories %>
                  <tr>
                    <td><%= category.id %></td>
                    <td><%= category.categoryName %></td>
                    <td><%= category.categoryDesc %></td>
                    <td><%= category.created_at.to_s(:short) %></td>
                    <td>
                      <%= link_to "编辑",:action=>"modify_category",:controller=>"admin",:id=>category.id %>|
                      <%= link_to "删除",:action=>"delete_category",:controller=>"admin",:id=>category.id %>|
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>
<%= render :partial=>"footer" %>
