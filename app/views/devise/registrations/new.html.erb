<%= render :partial =>"share/header" %>
<div class="container">
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span7">
        <% if flash[:notice]||flash[:error]%>
          <div class="alert alert-error"><%= flash[:notice]||flash[:error] %></div>
        <% end %>
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),:html=>{:class=>"form-horizontal",:id=>"userform"}) do |f| %>
          <%= devise_error_messages! %>
          <fieldset>
            <legend>用户注册</legend>
            <div class="control-group">
              <%= f.label :username,"用户名称",:class=>"control-label" %>
              <div class="controls">
                <%= f.text_field :username,:class=>"input input-xlarge" %>
              </div>
            </div>
            <div class="control-group">
              <%= f.label :email,"用户邮箱",:class=>"control-label" %>
              <div class="controls">
                <%= f.email_field :email,:class=>"input input-xlarge" %>
              </div>
            </div>
            <div class="control-group">
              <%= f.label :password,"用户密码",:class=>"control-label" %>
              <div class="controls">
                <%= f.password_field :password,:class=>"input input-xlarge" %>
              </div>
            </div>
            <div class="control-group">
              <%= f.label :password_confirmation,"确认密码",:class=>"control-label" %>
              <div class="controls"> 
                <%= f.password_field :password_confirmation,:class=>"input input-xlarge" %>
              </div>
            </div>
              <div class="control-group">
              <%= f.label :userDesc,"备注信息",:class=>"control-label" %>
              <div class="controls"> 
                <%= f.password_field :userDesc,:class=>"input input-xlarge" %>
              </div>
            </div>

            <div class="control-group">
              <div class="controls">
                <%= f.submit "注册",:class=>"btn btn-success" %>
              </div>
            </div>
          <% end %>
        </div>
            <div class="span5" style="margin-top:35px">
              <div class="box">
                <h2 class="title">其他选项</h2>
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%= render :partial=>"share/footer" %>

