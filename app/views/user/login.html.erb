<%= render :partial =>"share/header" %>
<div class="container">
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span7">
        <% if flash[:notice] %>
          <div class="alert alert-error"><%= flash[:notice] %></div>
        <% end %>
        <%= form_for :user,:method =>:post,:url=>{:action=>"login"},:html=>{:class=>"form-horizontal",:id=>"userform"} do |f| %>
          <fieldset>
            <legend>用户登录</legend>
            <div class="control-group">
              <%= f.label :userName,"用户名称",:class=>"control-label" %>
              <div class="controls">
                <%= f.text_field :userName,:class=>"input-xlarge" %>
              </div>
            </div>
             <div class="control-group">
              <%= f.label :userPassword,"用户密码",:class=>"control-label" %>
              <div class="controls">
                <%= f.password_field :userPassword,:class=>"input-xlarge" %>
              </div>
            </div>
            <div class="control-group">
              <div class="controls">
                <%= f.submit "登录",:class=>"btn btn-success" %>
              </div>
            </div>

            </fieldset>
          <% end %>
        </div>
      </div>
      <div class="span5">
        <%= render :partial =>"sideinfo" %>
      </div>
      <%= render :partial=>"share/footer" %>
    </div>
  </div>
</div>
